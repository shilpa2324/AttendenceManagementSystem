@model LoginDetails
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using (Html.BeginForm())
{

    <div class="panel panel-info">
        <div class="panel-heading">
            <h2>Login</h2>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <div>
                    &nbsp;
                </div>

                <form asp-action="Login" asp-controller="Home">
                    <div asp-validation-summary="All" class="text-danger ">
                    </div>
                    <div>
                        &nbsp;
                    </div>
                    <div class="table">
                        <div class="row">
                            <div class="col-md-4 text-left">Username</div>
                            <div class="col-md-4 pull-left"><input name="Username" type="text" value="" required/></div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div class="row">
                            <div class="col-md-4 text-left">Password</div>
                            <div class="col-md-4 pull-left"><input name="Password" type="password" value="" required/></div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div class="row">
                            <div class="col-md-11 text-center">
                                <button type="submit" class="btn btn-success ">Login</button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            @if (ViewBag.IsSuccess ==0)
            {
                <div>
                    <label class="text-danger">Invalid user</label>

                </div>
            }
        </div>
        
        <div class="panel-footer">
            <h6>Copyright</h6>
        </div>

    </div>
}






