
@model AttendenceManagementSystem.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using (Html.BeginForm())
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <h2>Create Employee</h2>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <form asp-action="Login" asp-controller="Home">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="table">
                        <div class="row">
                            <div class="col-md-4 text-left">Name</div>
                            <div class="col-md-4 pull-left"><input name="Name" type="text" /></div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div class="row">
                            <div class="col-md-4 text-left">Email Id</div>
                            <div class="col-md-4 pull-left"><input name="MailID" type="email" /></div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div class="row">
                            <div class="col-md-4 text-left">Category</div>
                            <div class="col-md-4 pull-left">
                                <div class="form-group">
                                    <select name="category" class="form-control">
                                        <option value="employee">Employee</option>
                                        <option value="manager">Manager</option>
                                        <option value="admin">Admin</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div class="row">
                            <div class="col-md-4 text-left">User Name</div>
                            <div class="col-md-4 pull-left"><input name="Username" type="text" /></div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                        <div class="row">
                            <div class="col-md-4 text-left">Password</div>
                            <div class="col-md-4 pull-left"><input name="Password" type="password" /></div>
                        </div>
                        <div>
                            &nbsp;
                        </div>
                    </div>
                    <div>
                        <div class="col-lg-12 pull-left">
                            @Html.ActionLink("Back", "Display")
                        </div>
                        <button type="submit" class="btn btn-success pull-right">Create</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel-footer">
            <h6>Copyright</h6>
        </div>
    </div>   
}
   