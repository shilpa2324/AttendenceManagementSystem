@model AttendenceManagementSystem.Models.Employee
@{
    ViewData["Title"] = "Edit";
}


@using (Html.BeginForm())
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <h2>Edit</h2>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <div class="table">
                    <div class="row">

                        <div class="col-md-4 text-left">Name</div>


                        <div class="col-md-4 pull-left">@Html.EditorFor(model => model.Name)</div>
                    </div>
                    <div>
                        &nbsp;
                    </div>

                    <div class="row">
                        <div class="col-md-4 text-left">MailID</div>

                        <div class="col-md-4 pull-left">@Html.EditorFor(model => model.MailID)</div>
                    </div>
                    <div>
                        &nbsp;
                    </div>
                    <div class="row">
                        <div class="col-md-4 text-left">Category</div>
                        <div class="col-md-4 pull-left">
                            <div class="form-group">
                                <select name="category" class="form-control">
                                    <option value="employee">Employee</option>
                                    <option value="manager">Manager</option>
                                    <option value="admin">Admin</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div>
                        &nbsp;
                    </div>

                    @Html.HiddenFor(model => model.EmpID)

                    <div>
                        <button type="submit" class="btn btn-success pull-right">Save</button>
                    </div>
                </div>
            </div>
        </div>


        <div class="panel-footer">
            <h6>Copyright</h6>
        </div>
    </div>

    <div class="col-lg-12 ">
        @Html.ActionLink("Back", "Display")

    </div>
}


